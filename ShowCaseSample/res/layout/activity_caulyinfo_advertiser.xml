            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="21dp"
            android:src="@drawable/cauly_url" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="12dp" />
    </LinearLayout>

