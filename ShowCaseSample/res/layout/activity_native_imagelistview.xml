<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp" >
   <View
        android:layout_width="match_parent"
        android:layout_height="180dp"   android:id="@+id/empty_img" >
  </View>
        <ImageView
            android:id="@+id/image" android:layout_centerHorizontal="true"
            android:layout_width="match_parent" android:scaleType="centerCrop"
            android:layout_height="180dp" />
       
        <ImageView
            android:id="@+id/sponsor"
            android:layout_width="53dp"  android:layout_alignParentRight="true"
            android:layout_height="53dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true" 
            android:layout_height="72dp" android:background="@drawable/title_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="39dp"
                android:lines="2"
                android:textColor="#ffffff"
                android:textSize="11dp" />
            
        </RelativeLayout>
        
         
    </RelativeLayout>

</RelativeLayout>